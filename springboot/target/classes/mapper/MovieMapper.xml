<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.springboot.mapper.MovieMapper">

    <select id="selectMoviePageWithCategory" resultType="org.example.springboot.entity.Movie">
        SELECT m.*, c.category_name
        FROM movie m
        LEFT JOIN movie_category c ON m.category_id = c.id
        <where>
            <if test="title != null and title != ''">
                AND m.title LIKE CONCAT('%', #{title}, '%')
            </if>
            <if test="categoryId != null">
                AND m.category_id = #{categoryId}
            </if>
            <if test="status != null">
                AND m.status = #{status}
            </if>
        </where>
        ORDER BY m.create_time DESC
    </select>

</mapper>